<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error_message| %>
      <li>
        <%= error_message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @student do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :mod %>
  <%= f.text_field :mod %>

  <%= f.submit %>
<% end %>